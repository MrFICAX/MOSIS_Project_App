<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SignUpFragment">

    <RelativeLayout
        android:id="@+id/content_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:id="@+id/rectangle_10"
            android:layout_width="430dp"
            android:layout_height="643dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/rectangle_10_shape" />

        <ImageView
            android:id="@+id/freelencelivelogo_2"
            android:layout_width="246dp"
            android:layout_height="235dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="85dp"
            android:layout_marginEnd="85dp"
            android:layout_marginTop="-30dp"

            android:contentDescription="freelencelivelogo_2"

            android:src="@drawable/freelencelivelogo_2"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/freelencelive"
            android:layout_width="408.98dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="180dp"
            android:text="@string/freelencelive_string"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="48sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center"
            android:layout_marginTop="250dp"
            android:gravity="center"
            android:text="@string/register_ek3_string"
            android:textColor="@color/black"
            android:textSize="48sp"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/emailLayout"
            android:layout_width="375dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="400dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="819dp"
            android:hint="@string/email"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/background_style"
                android:inputType="textEmailAddress" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/passwordLayout"
            android:layout_width="375dp"
            android:layout_height="60dp"
            android:layout_below="@+id/emailLayout"

            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="470dp"
            android:hint="@string/password"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp"
            app:passwordToggleEnabled="true"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textPassword"
                android:background="@drawable/background_style" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/firstNameLayout"
            android:layout_width="375dp"
            android:layout_height="60dp"
            android:layout_below="@+id/passwordLayout"

            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="540dp"
            android:layout_marginEnd="20dp"
            android:hint="@string/first_name_string"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp"
            app:layout_constraintEnd_toEndOf="parent">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/first_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/passwordLayout"
                    android:background="@drawable/background_style" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/lastNameLayout"
            android:layout_width="375dp"
            android:layout_height="60dp"
            android:layout_below="@+id/firstNameLayout"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="610dp"
            android:layout_marginEnd="20dp"
            android:hint="@string/last_name_string"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp"
            app:layout_constraintEnd_toEndOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/last_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/first_name"
                    android:background="@drawable/background_style"
/>
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="670dp">


<!--            <com.google.android.material.textfield.TextInputEditText-->
<!--                android:id="@+id/phone_code"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="match_parent"-->
<!--                android:layout_weight="1"-->
<!--                android:layout_margin="10dp"-->
<!--                android:background="@drawable/rectangle_15_shape" />-->

<!--            <Spinner-->
<!--                android:id="@+id/spinnerPhoneCodes"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="match_parent"-->
<!--                android:layout_weight="3"-->
<!--                android:background="@drawable/background_style"-->
<!--                style="@style/Widget.AppCompat.Spinner"-->
<!--                android:dropDownWidth="wrap_content"-->
<!--                android:dropDownVerticalOffset="?attr/dropdownListPreferredItemHeight"-->
<!--                android:popupBackground="@drawable/background_style"-->
<!--                android:popupElevation="3dp"-->
<!--                android:stateListAnimator="@drawable/spinner_sla"-->
<!--                android:layout_margin="5dp"-->
<!--             />-->

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/phoneNumberLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="610dp"
                android:layout_marginEnd="20dp"
                android:hint="@string/phone_number_string"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp"
                android:layout_weight="1"

                app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/phone_number"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="phone"
                android:background="@drawable/background_style"
                />

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>


        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imageCameraBackground"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_below="@+id/register"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="150dp"
            android:layout_marginEnd="150dp"
            android:layout_marginTop="-7dp"
            android:scaleType="centerCrop"
            android:padding="3dp"
            app:shapeAppearance="@style/photo"
            app:strokeWidth="5dp" />

        <ImageView
            android:id="@+id/openCamera"
        android:layout_width="match_parent"
        android:layout_height="64.5dp"
        android:layout_below="@+id/register"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="80dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="78dp"
        android:contentDescription="vector_ek5"
        android:src="@drawable/camera" />

        <ImageView
            android:id="@+id/openGallery"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@+id/register"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="35dp"
            android:contentDescription="@string/openGallery"
            android:src="@drawable/icons8_gallery_64" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonSignUp"
            android:layout_width="227dp"
            android:layout_height="79dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="750dp"
            android:background="@drawable/rectangle_9_shape"
            android:text="@string/button_register"
            android:textColor="@color/_bg__log_in_ek2_color"
            android:textSize="36sp"
            android:textStyle="bold"
            app:backgroundTint="@color/rectangle_12_color" />

        <TextView
            android:id="@+id/backToLogin"
            android:layout_width="457dp"
            android:layout_height="98.02dp"
            android:layout_gravity="center_horizontal|center"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="825dp"
            android:gravity="center"
            android:text="@string/back_to_login"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>