<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".dialogs.ChooseTimeFragmentDialog">

    <TextView
        android:id="@+id/creatingJob"
        android:layout_width="257dp"
        android:layout_height="78dp"
        android:background="@color/rectangle_10_color"
        android:gravity="center"
        android:text="@string/choose_time"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="RtlCompat" />

    <TimePicker
        android:id="@+id/time_picker"
        android:layout_width="257dp"
        android:layout_height="169dp"
        android:layout_weight="4"
        android:background="@color/light_pink_transparent"
        android:timePickerMode="spinner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/creatingJob" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/ApplyChanges"
        android:layout_width="257dp"
        android:layout_height="79dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/rectangle_8_shape"
        android:text="@string/apply"
        android:textColor="@color/white"
        android:textSize="36sp"
        android:textStyle="bold"
        app:backgroundTint="@color/pink"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/time_picker" />
</androidx.constraintlayout.widget.ConstraintLayout>